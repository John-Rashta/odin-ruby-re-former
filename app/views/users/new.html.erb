<%= form_with model: @user do |form| %>
  <div>
    <%= form.label :username, "Your user name here" %>
    <%= form.text_field :username, value: "Steve"%>
  </div>
  <div>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>
  <div>
    <%= form.label :email %>
    <%= form.email_field :email, placeholder: "example@example.com" %>
  </div>
  <%= form.submit %>
<% end %>